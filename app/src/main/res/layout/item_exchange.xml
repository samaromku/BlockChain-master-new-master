<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llExchange"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/gradient_one"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:textColor="@android:color/white"
            tools:text="2017.10.10 20:20" />

        <include layout="@layout/devider_ver" />

        <TextView
            android:id="@+id/tvActualPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="@android:color/white"
            tools:text="12345.1" />

        <TextView
            android:id="@+id/tvBuyOrSelt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@android:color/white"
            tools:text="-2000" />

        <ImageView
            android:id="@+id/ivBuyOrSell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5" />

    </LinearLayout>

    <!--<include layout="@layout/devider_hor" />-->
</LinearLayout>

